#!/usr/bin/perl -0777

use strict;
use warnings;

my $diff = <>;

#print "\n\n$diff\n\n";
my @matches = $diff =~ m/
    ^\ UPDATE\ (\w+)\ SET\s+
    ^[-](\w+)='(.*?)'\s+WHERE\sid='(.*?)'\s+
    ^[+]\w+='(.*?)'\s+WHERE\sid='.*?'\s+
    /xmg;

my $tbl = $1;
my $column = $2;
my $vol1 = $3;
my $id = $4;
my $vol2 = $5;

my $query = "update $tbl set $column = '<<<<<<< HEAD\n$vol1\n=======\n$vol2\n>>>>>>> REMOTE' where id='$id';";
my $select = "select $column from $tbl where id='$id';";

print "$query\n";
print STDERR "$select\n";
